<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CinemaCloneCompose" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>  # Required for
        <item name="postSplashScreenTheme">@style/Theme.CinemaCloneCompose</item>  # Required.
    </style>
</resources>